<h2>Add New Patient Below.</h2><br>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<br>

<form action="/doctors/new" method="POST">
  <p>First Name: <input type="text" name="first_name"></p><br>
  <p>Last Name: <input type="text" name="last_name"></p><br>
  <p>Email: <input type="text" name="email"></p><br>

  <p><u>Medications<ul></p>
  <% Med.all.each do |m| %>
        <input id="<%=m.name%>" type="checkbox" name="med" value="<%=m.id%>"<%='checked' if @patient.meds.map{|m| m.id}.include?(m.id)%>
        <label for="<%=m.name%>"><%=m.name%>, <%=m.dosage%></label>
      <% end %><br><br>

  <input type="submit" value="Create Patient">
 </form>
