<h2><u>Sign Up Below As A Patient:</u></h2>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %><br><br>

<form action="/patients/signup" method="POST">
  <p>First Name: <input type="text" name="first_name"></p><br>
  <p>Last Name: <input type="text" name="last_name"></p><br>
  <p>Email: <input type="text" name="email"></p><br>
  <p>Username: <input type="text" name="username"></p><br>
  <p>Password: <input type="password" name="password"></p>

  <h3>Choose a Doctor</h3>
  <% @doctors.each do |doctor| %>
    <input type="radio" name="doctor_id" id="<%= doctor.id %>" value="<%= doctor.id %>">Dr.<%=doctor.first_name%>, <%=doctor.last_name%></input><br>
  <% end %>
  <br>

  <input type="submit" value="Create Patient">
 </form>
