<h2>Edit Patient Below.</h2><br>

<% if flash.has?(:error) %>
  <%= flash[:error] %>
<% end %>
<br>

<b>Patient #</b> <%=@patient.id%><br>
<b>Name:</b> <%=@patient.last_name%>, <%=@patient.first_name%><br>
<b>Email:</b> <%=@patient.email%><br>
<b>Username:</b> <%=@patient.username%><br>
<b>Password: **************</b></br><br>

<h4>Please fill in all sections</h4>
<form action="/doctors/<%=@doctor.slug%>/<%=@patient.id%>/edit" method="POST">
  <p>First Name: <input type="text" name="first_name" placeholder="<%=@patient.first_name%>"></p><br>
  <p>Last Name: <input type="text" name="last_name" placeholder="<%=@patient.last_name%>"></p><br>
  <p>Email: <input type="text" name="email" placeholder="<%=@patient.email%>"</p><br>
  <p>Username: <input type="text" name="username" placeholder="<%=@patient.username%>"></p><br>
  <p>Password: <input type="password" name="password" placeholder="type new password"></p><br><br>

  <input type="submit" value="Update Patient">
 </form>

 <form method="POST" action="/patients/<%=@patient.slug%>/delete">
 <input type="submit" value="Delete Patient">
 </form>
